%h3= @article.headline
%p= @article.content

%p= link_to 'Edit', edit_article_path(@article) if policy(@article).edit?
%p= link_to 'Delete', article_path(@article), method: :delete if policy(@article).destroy?

- @comments.each do |comment|
  %p= comment.content

= form_with scope: :comment, url: article_comments_path(@article), local: true do |form|
  = form.label :content
  = form.text_field :content
  = form.submit

= link_to 'Back', root_path
